<h1>Edit Group</h1>
<%= form_for @group do |f| %>
  <h2>what.cd metadata</h2>
  <table>
    <tr>
      <td>Name</td>
      <td><%= @group.whatcd_name %></td>
    </tr>
    <tr>
      <td>Year</td>
      <td><%= @group.whatcd_year %></td>
    </tr>
    <tr>
      <td>Release type</td>
      <td><%= @group.whatcd_release_type %></td>
    </tr>
    <tr>
      <td>Confidence</td>
      <td><%= f.text_field :whatcd_confidence %></td>
    </tr>
    <tr>
      <td>Links</td>
      <td>
        <a href='https://what.cd/torrents.php?id=<%= @group.whatcd_id %>' target='_blank'>Torrent group page</a>
      </td>
    </tr>
  </table>
  <h2>artists</h2>
  <table>
    <% @group.artists_by(:type).each do |type, artists| %>
      <tr>
        <td><%= type %></td>
        <td><%= render partial: 'shared/artist', collection: artists, spacer_template: 'shared/break' %></td>
      </tr>
    <% end %>
  </table>
  <p>
  <%= f.submit 'Update' %>&nbsp;<%= link_to 'Cancel', @group.library_album %>
  </p>
<% end %>
